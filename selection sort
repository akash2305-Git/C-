#include<iostream>
using namespace std;

void swap(int *xp,int *yp){
	
	int temp = *xp;
	*xp = *yp;
	*yp = int temp;

}

void selectsort(arr[],n){
	int i,j,min_ind;
    //one by one move boundry of unsorted array
	for(int i=0;i<n-1;i++){
		min_ind = i;   // find minimum element in unsorted array
		for(int j=i+1;j<n;j++){
		if(arr[j] < arr[min_ind])
			min_ind = j;

			swap(&arr[min_ind],&arr[i]);
		}
	}
}
int main(){
	
	int arr[]= {10,15,1,2,3,5};
	int n = sizeof(arr)/sizeof(arr[0]);
	selectsott(arr,n);
	cout<<"sorted array";
	printarray(arr,n);

	return 0;


}